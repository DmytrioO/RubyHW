<p style="color: green"><%= notice %></p>

<h1 style="text-align: center; margin-bottom: 20px">Products</h1>

<div id="products" style="align-self: center">

  <div class="row row-cols-1 row-cols-md-2 g-4" style="margin-left: auto; margin-right: auto; text-align: center">
    <% @products.each do |product| %>
      <% if !params[:category] || params[:category] && product.category.title.downcase == params[:category].downcase %>
        <div class="col" style="width: auto; margin-left: auto; margin-right: auto">
          <div class="card" style="width: 402px">
            <img src="<%= product.image %>" style="height: 320px; width: 400px" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= link_to "#{product.name}", product %></h5>
              <p class="card-text"><%= product.price %>$</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
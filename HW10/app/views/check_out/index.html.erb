<!DOCTYPE html>

<html>

  <head>
    <title>Cart</title>
    <%= stylesheet_link_tag 'check_out_index_style.css' %>
  </head>

  <body>
  <%= form_with url: orders_path, method: :post, data: { 'turbo-method': :create } do |form| %>
    <div class="card info-card">
      <h3>Personal information:</h3>
      <div>
        <%= form.label 'Your first name:' %>
        <%= form.text_field :firstname, class: 'info-input firstname', placeholder: 'First name', required: true %>
      </div>
      <br>
      <div>
        <%= form.label 'Your last name:' %>
        <%= form.text_field :lastname, class: 'info-input lastname', placeholder: 'Last name', required: true %>
      </div>
      <br>
      <div>
        <%= form.label 'Your phone number:' %>
        <%= form.text_field :number, class: 'info-input phone', placeholder: '+380000000000', required: true %>
      </div>
    </div>
    <div class="card info-card">
      <h3>Payment information:</h3>
      <div>
        <%= form.label 'Payment form:' %>
        <br>
        <%= form.radio_button :pay, 'unpaid', checked: true %> By card on the website<br>
        <%= form.radio_button :pay, 'post' %> When received<br>
        <div class="alert alert-warning" role="alert">
          If you choose to pay by card - please, do it after confirm order on the order page!
        </div>
      </div>
    </div>
    <div class="card info-card">
      <h3>Delivery information:</h3>
      <div>
        <%= form.label 'City:' %>
        <%= form.text_field :city, class: 'info-input city', placeholder: 'City', required: true %>
      </div>
      <br>
      <div>
        <%= form.label 'Street:' %>
        <%= form.text_field :street, class: 'info-input street', placeholder: 'Street', required: true %>
      </div>
      <br>
      <div>
        <%= form.label 'House:' %>
        <%= form.text_field :house, class: 'info-input house', placeholder: 'House', required: true %>
      </div>
      <br>
      <div>
        <%= form.label 'Apartments(optionally):' %>
        <%= form.text_field :apartments, class: 'info-input apartments', placeholder: 'Apartments' %>
      </div>
    </div>
    <%= form.submit 'Submit', class: 'btn btn-primary submit' %>
  <% end %>
  <% cookies[:total] = params[:total] %>
  </body>
</html>